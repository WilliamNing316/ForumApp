<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical"
        tools:context=".EditInfoActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/out"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="个人资料"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:text="头像"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/polivia"/>
            <ImageButton
                android:id="@+id/profile_image_edit"
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="@dimen/activity_horizontal_margin"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/next_step"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:text="昵称"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/nick_name"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_height="match_parent"
                android:text="THU最好的ikun"/>
            <ImageButton
                android:id="@+id/nick_name_edit"
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="@dimen/activity_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/next_step"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:text="性别"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_height="match_parent"
                android:text="男"/>
            <ImageButton
                android:id="@+id/gender_edit"
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="@dimen/activity_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/next_step"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:text="生日"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/birthday"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_height="match_parent"
                android:text="2001-5-7"/>
            <ImageButton
                android:id="@+id/birthday_edit"
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="@dimen/activity_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/next_step"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:text="身份"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/identity"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_height="match_parent"
                android:text="本科生"/>
            <ImageButton
                android:id="@+id/identity_edit"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/next_step"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:text="简介"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/brief_intro"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_height="match_parent"
                android:text="一名IKUN"/>
            <ImageButton
                android:id="@+id/brief_intro_edit"
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="@dimen/activity_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/next_step"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:text="账号ID"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ID"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_height="match_parent"
                android:text="859961408"/>
            <ImageButton
                android:id="@+id/ID_copy"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/next_step"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:text="绑定手机号"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_height="match_parent"
                android:text="19872014786"/>
            <ImageButton
                android:id="@+id/number_change"
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="@dimen/activity_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/next_step"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:text="名片"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textAlignment="center"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>