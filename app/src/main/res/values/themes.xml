<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NGM" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/maintheme</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--        <item name="android:windowFullscreen">true</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NGM.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="title_dashboard" parent="Theme.AppCompat">
        <item name="android:textSize">11dp</item>
    </style>

    <style name="Theme.NGM.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.NGM.PopupOverlay" parent="Theme.AppCompat.Light.NoActionBar" />
</resources>